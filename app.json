{
  "expo": {
    "name": "VoucherVault",
    "slug": "gutschein",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ch.vouchervault.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Diese App benötigt Zugriff auf die Kamera, um Gutscheine zu scannen.",
        "NSPhotoLibraryUsageDescription": "Diese App benötigt Zugriff auf deine Fotos, um gespeicherte Gutscheine hochzuladen.",
        "NSFaceIDUsageDescription": "Diese App verwendet Face ID, um deine Gutscheine zu schützen.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "ch.vouchervault.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563eb"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "extra": {
      "eas": {
        "projectId": "bdf2d798-7677-45e1-8b50-ccd7c6e0c4f6"
      }
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "sounds": []
        }
      ]
    ],
    "scheme": "vouchervault"
  }
}